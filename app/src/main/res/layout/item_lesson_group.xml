<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:ignore="RtlHardcoded,RtlSymmetry"
    >

    <TextView
        android:id="@+id/lesson_time"
        style="@style/Widget.GrSUSchedule.Lesson.Time"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        tools:text="13:50\n14:20"
        />

    <View
        style="@style/Widget.GrSUSchedule.Lesson.TimeDivider"
        android:layout_width="@dimen/divider_size"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/std_margin"
        android:paddingTop="@dimen/std_margin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/std_margin"
        android:paddingRight="@dimen/std_margin"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        >

        <TextView
            android:id="@+id/lesson_title"
            style="@style/Widget.GrSUSchedule.Lesson.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lesson name"
            />

        <TextView
            android:id="@+id/lesson_place"
            style="@style/Widget.GrSUSchedule.Lesson.Place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Place"
            />
    </LinearLayout>

</LinearLayout>