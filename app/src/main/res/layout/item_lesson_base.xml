<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/LessonContent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,RtlSymmetry"
    >

    <TextView
        android:id="@+id/lesson_teacher"
        style="@style/Lesson.Teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="Teacher"
        />

    <by.kirich1409.grsuschedule.widget.RowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/lesson_place"
            style="@style/Lesson.Place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Place"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/lesson_subgroup"
            style="@style/Lesson.Subgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Subgroup"
            tools:visibility="visible"
            />
    </by.kirich1409.grsuschedule.widget.RowLayout>
</LinearLayout>