<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <Preference
        android:key="@string/pref_google_plus_community_key"
        android:persistent="false"
        android:summary="@string/pref_google_plus_community_summary"
        android:title="@string/pref_google_plus_community_title"
        >

        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/pref_google_plus_community_link"
            />
    </Preference>

    <Preference
        android:key="@string/pref_google_rate_app_key"
        android:persistent="false"
        android:title="@string/pref_google_rate_app_title"
        >

        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/app_market_link"
            />
    </Preference>

    <Preference
        android:key="@string/pref_app_version_key"
        android:persistent="false"
        android:title="@string/pref_app_version_title"
        />

    <Preference
        android:key="@string/pref_app_build_key"
        android:persistent="false"
        android:title="@string/pref_app_build_title"
        />
</PreferenceScreen>