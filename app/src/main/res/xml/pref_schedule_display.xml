<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="@string/pref_show_empty_lesson_key"
        android:persistent="false"
        android:summary="@string/pref_show_empty_lesson_summary"
        android:title="@string/pref_show_empty_lesson_title"
        />

    <ListPreference
        android:entries="@array/pref_navigation_mode_entries"
        android:entryValues="@array/pref_navigation_mode_entries_values"
        android:key="@string/pref_navigation_mode_key"
        android:title="@string/pref_navigation_mode_title"
        />

    <Preference
        android:persistent="false"
        android:title="@string/app_info"
        >
        <!--suppress AndroidDomInspection -->
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="by.kirich1409.grsuschedule.appinfo.AppInfoActivity"
            android:targetPackage="@string/application_id"
            />
    </Preference>
</PreferenceScreen>